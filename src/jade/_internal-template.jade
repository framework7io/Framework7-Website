    header.inner-header
      .center
        a(href="../").logo
        .langs
          span Language: 
          a(href="http://framework7.io") EN
          a(href="http://framework7.cn/") CN
        .carbon
          <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?zoneid=1673&serve=C6AILKT&placement=framework7io" id="_carbonads_js"></script>
        .title-links
          .title Framework7
          .links-row
            .links-label Project:
            .links
              a(href="https://github.com/nolimits4web/Framework7/releases", target="_blank") Download
              a(href="http://forum.framework7.io") Forum
              - if (activeLink == 'contribute')
                a(href="../contribute/").active Contribute
              - else
                a(href="../contribute/") Contribute
              a(href="https://github.com/nolimits4web/Framework7/blob/master/CHANGELOG.md", target="_blank") Changelog
          .links-row
            .links-label Learn:
            .links
              - if (activeLink == 'docs')
                a(href="../docs/").active Docs
              - else
                a(href="../docs/") Docs

              - if (activeLink == 'vue')
                a(href="../vue/").active F7 + Vue
              - else
                a(href="../vue/") F7 +  Vue

              - if (activeLink == 'react')
                a(href="../react/").active F7 +  React
              - else
                a(href="../react/") F7 +  React

              - if (activeLink == 'tutorials')
                a(href="../tutorials/").active Tutorials
              - else
                a(href="../tutorials/") Tutorials
          .links-row
            .links-label Apps:
            .links
              - if (activeLink == 'examples')
                a(href="../examples/").active Layouts
              - else
                a(href="../examples/") Layouts

              - if (activeLink == 'plugins')
                a(href="../plugins/").active Plugins
              - else
                a(href="../plugins/") Plugins

              - if (activeLink == 'apps')
                a(href="../apps/").active Demo Apps
              - else
                a(href="../apps/") Demo Apps

              - if (activeLink == 'showcase')
                a(href="../showcase/").active Showcase
              - else
                a(href="../showcase/") Showcase

    .share-line
      .center
        include _share-buttons
        include _github-buttons
        .clearfix
    .content.center
      block content
    .share-line
      .center
        include _share-buttons
        include _github-buttons
        .clearfix
    footer
